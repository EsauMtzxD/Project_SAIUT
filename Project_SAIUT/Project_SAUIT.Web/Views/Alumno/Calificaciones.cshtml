@model Project_SAIUT.Entity.Calificaciones

@{
    ViewBag.Title = "Calificaciones";
    Layout = "~/Views/Shared/SiteMaster.cshtml";
}

<!-- Contenedor que abarca la tabla que muestra las calificaciones actuales -->
<div class="container py-2">
    <h4 class="font-weight-bold text-center">FILTRAR POR CUATRIMESTRE</h4>
    <!-- Select para filtrar por el cuatrimestre cursado -->
    @Html.DropDownList("Cuatrimestres", (List<SelectListItem>)ViewBag.items, new { @class = "form-control font-weight-bold text-center", @onchange = "SelectedIndexChanged(this.value)" })
    <div class="mt-3 apply">
        <table class="table table-striped table-dark table-bordered" id="Calf">
            <thead>
                <tr class="text-center">
                    <th style="width: 25%;" scope="col">MATERIAS</th>
                    <th style="width: 25%;" scope="col">PROFESOR</th>
                    <th style="width: 25%;" scope="col">CALIFICACIÓN</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Html.DisplayFor(m => m.materia)</td>
                    <td>@Html.DisplayFor(m => m.maestro)</td>
                    <td>@Html.DisplayFor(m => m.calificaciones)</td>
                </tr>
                <tr>
                    <th colspan="2" class="text-right">Cuatrimestre</th>
                    <td>@ViewBag.c</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

<script type="text/javascript">

    function SelectedIndexChanged(val) {

        window.location.href = "../Alumno/GetCuatri?cuatri=" + val;
        

    }

